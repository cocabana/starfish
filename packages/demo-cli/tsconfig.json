{
  "compilerOptions": {
    "declaration": false,
    "noEmit": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": false,
    "target": "es2022",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "dist", "bak"]
}
