{
  "testPathIgnorePatterns": [".*/node_modules/", ".*/packages/", ".*/bak/"],
  "transform": {
    "^.+\\.(t|j)sx?$": "ts-jest"
  },
  "testMatch": ["**/*.test.ts"],
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
  "collectCoverage": false,
  "coverageDirectory": "./coverage/",
  "collectCoverageFrom": ["src/**/*.ts"]
}
